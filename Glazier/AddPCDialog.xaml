<Page
    x:Class="Glazier.AddPCDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <!-- Content body -->
        <TextBox Header="Display Name (Optional)" PlaceholderText="Display Name" Margin="0,10"/>
        <TextBox Header="MAC Address" PlaceholderText="MAC Address" Margin="0,10"/>
        <TextBox Header="Hostname" PlaceholderText="Hostname" Margin="0,10"/>
        <TextBox Header="Username" PlaceholderText="Username" Margin="0,10"/>
        <PasswordBox Header="Password" PlaceholderText="Password" Margin="0,10"/>
    </StackPanel>

</Page>